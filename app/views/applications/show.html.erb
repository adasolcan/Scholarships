  <body>
    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/">Burse</a>
          <div class="nav-collapse collapse nav-bar-inverse-collapse">
            <ul class="nav pull-right">
              <li>
                <a onclick="showModal()">Metodologie</a>
              </li>
              <li>
                <a href="../logout">Iesire</a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="container-narrow">
      <div class="masthead">
        <h4 class="title">
          
          <% case @application.scholarship_id %>
          <% when 1 %>  
          <p>Bursa de perfomanta</p>
          <% when 2 %>  
          <p>Bursa de studiu/merit</p>
          <% when 3 %>  
          <p>Bursa sociala</p>
          <% when 4 %> 
           <p>Bursa sociala ocazionala</p>
          <% when 5 %> 
           <p>Bursa medicala</p>
          <% when 6 %>  
          <p>Bursa sociala orfan</p>
          
        <% end %>
          
        </h4>
        <div class="well">
          <div style=" padding-top:70px;  margin-left:50px; padding-bottom:50px; margin-right: auto;">


<p>
  <b>Nume:</b>
  <%= @user.show_by_id({:id => @application.user_id })[0]["first_name"] %>
</p>

<p>
  <b>Prenume:</b>
  <%= @user.show_by_id({:id => @application.user_id })[0]["last_name"] %>
</p>

<p>
  <b>Status:</b>
  <%= @application.status %>
</p>

<p>
  <b>Data depunere:</b>
  <%= @application.submission_date.strftime("%d-%m-%Y") %>
</p>

<p>
  <b>Motiv de aplicare:</b>
  <%= @application.reason %>
</p>

<p>
  <b>Depunere pe card:</b>
  <% case @application.on_card %>
  <% when 0 %>
  Nu
  <% when 1 %>
  Da
  <p>
    <b> IBAN <b>
    <%= @user.show_by_id({:id => @application.user_id })[0]["iban"] %>
  </p>
  <% end %>
</p>
</div>
</div>
