</div>
<div class="bottom-logo">
    <img src="/assets/logo.png" width="150px" height="150px"/>
    </div>

  
  <script type="text/javascript">
     $("#wizard").bwizard();
  </script>
    <script type="text/javascript">
     $("#wizard").bwizard();
  function showModal(){
     $("#metodologieModal").modal('show') ;
   }
  
   $(".modalButton").click(function(){
    var id = this.id;
    var modalNou = '#modal' + id;
    $(modalNou).modal('show');
   });
